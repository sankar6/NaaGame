<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="349.0" prefWidth="519.0" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.naagame.editor.controllers.SpriteEditorController">
   <children>
      <Label text="Sprite Editor">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <HBox prefHeight="341.0" prefWidth="479.0" spacing="15.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox prefHeight="177.0" prefWidth="270.0" spacing="10.0">
               <children>
                  <Label text="Name" />
                  <TextField fx:id="nameField" prefHeight="26.0" prefWidth="83.0" />
                  <Label text="Frames" />
                  <HBox spacing="5.0" VBox.vgrow="ALWAYS">
                     <children>
                        <TableView editable="true" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                          <columns>
                            <TableColumn editable="false" prefWidth="75.0" text="Texture" />
                            <TableColumn prefWidth="75.0" text="Duration" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <VBox>
                           <children>
                              <Button mnemonicParsing="false" text="+" />
                              <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="29.0" text="-" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children></VBox>
            <VBox prefHeight="221.0" prefWidth="92.0" spacing="15.0">
               <children>
                  <TitledPane collapsible="false" text="Preview">
                     <content>
                        <ImageView fitHeight="150.0" fitWidth="192.0" pickOnBounds="true" preserveRatio="true" />
                     </content>
                  </TitledPane>
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0" VBox.vgrow="NEVER">
         <children>
            <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" text="Save" />
            <Button mnemonicParsing="false" text="Cancel" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
